{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "analyze": {
      "cache": false
    },
    "storybook": {
      "cache": false
    },
    "storybook:build": {
      "outputs": ["storybook-static/**"],
      "cache": true
    },
    "storybook:move": {
      "cache": false
    },
    "clean:build": {
      "cache": false
    }
  }
}
